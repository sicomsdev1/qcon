   <RelativeLayout android:id="@+id/rel_plug_group_my"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginBottom="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color04">
        <TextView android:id="@+id/tv_my_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="19dp"
            android:textColor="@color/color06"
            android:textSize="13sp"
            android:text="@string/mygoup"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <android.support.v7.widget.RecyclerView android:id="@+id/recycler_myplug_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rel_plug_group_none"
        android:layout_width="match_parent"
