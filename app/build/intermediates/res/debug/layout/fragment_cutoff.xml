<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/trans01">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/actionbar_height_weight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#90000000">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:paddingLeft="20dp">
            <TextView android:id="@+id/set_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="전원 차단 설정"
                android:textSize="18dp"
                android:textColor="#d7d7d7"/>
            <TextView android:id="@+id/explain_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/set_text"
                android:text="설정한 전력량을 넘을 경우 플러그의 전원이 차단됩니다."
                android:textSize="12dp"
                android:textColor="#959595"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line_division2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="77">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:padding="7dp"
            android:background="#70000000">
            <LinearLayout android:id="@+id/ll_power_wv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal">
                <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/wv_power"
                    app:visibleItems="5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="W 이하"
                    android:textSize="20sp"
                    android:textColor="@color/color01"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_min_wv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal">
                <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/wv_time"
                    app:visibleItems="5"
                    app:isCyclic="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="초 지속"
                    android:textSize="20sp"
                    android:textColor="@color/color01"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView android:id="@+id/iv_curoff_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_schedule_switch"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/rl_cutoff_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#90000000"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout><!-- From: file:/Users/gudnam/Develop/git/qcon/app/src/main/res/layout/fragment_cutoff.xml -->