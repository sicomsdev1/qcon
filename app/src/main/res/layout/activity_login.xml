<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default_s">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="734"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="882"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="135"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1170"
            android:paddingBottom="20dp"
            android:background="@drawable/shape_login_box">
            <ImageView android:id="@+id/email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="27.5dp"
                android:src="@drawable/icon_email_add"/>
            <ImageView android:id="@+id/password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_icon"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="31.5dp"
                android:src="@drawable/icon_password"/>
            <EditText android:id="@+id/et_email"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/email_icon"
                android:layout_marginLeft="79dp"
                android:imeOptions="actionNext"
                android:hint="E-mail address"
                android:textColor="@color/color07"
                android:textSize="15sp"
                android:textColorHint="@color/color07"
                android:singleLine="true"/>
            <EditText android:id="@+id/et_password"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/password_icon"
                android:layout_marginLeft="79dp"
                android:hint="Password"
                android:textColor="@color/color07"
                android:textSize="15sp"
                android:textColorHint="@color/color07"
                android:password="true"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <!--<com.facebook.login.widget.LoginButton android:id="@+id/fb_login_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_marginTop="10dp"-->
                <!--facebook:confirm_logout="false"/>-->

            <TextView android:id="@+id/tv_login_btn"
                android:layout_width="238dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:text="Log In"
                android:textColor="@color/color01"
                android:textSize="17sp"
                android:gravity="center"
                android:background="@drawable/shape_login_btn"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="135"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="308"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="84"
        android:gravity="center">
        <ImageView android:id="@+id/iv_membership_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_membership"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="278"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="52"
        android:gravity="right|center_vertical"
        android:paddingRight="33dp">
        <ImageView android:id="@+id/iv_skip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_skip"
            android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="122"/>

</LinearLayout>